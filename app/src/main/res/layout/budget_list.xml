<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/budget_list_const"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">



    <TextView
        android:id="@+id/budgetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/listTextColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/budget_list_const" />

    <TextView
        android:id="@+id/budgetAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/listTitleColor"
        android:textSize="12sp"
        android:gravity="end"
        android:textAlignment="gravity"
        app:layout_constraintLeft_toRightOf="@id/budgetTitle"
        app:layout_constraintLeft_toLeftOf="@+id/budget_list_const"
        />

</android.support.constraint.ConstraintLayout>